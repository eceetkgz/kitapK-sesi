@model GirisViewModel

<form asp-action="GirisYap" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Eposta">E-posta</label>
        <input asp-for="Eposta" class="form-control" />
        <span asp-validation-for="Eposta" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Parola">Parola</label>
        <input asp-for="Parola" type="password" class="form-control" />
        <span asp-validation-for="Parola" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Giri≈ü Yap</button>
</form> 