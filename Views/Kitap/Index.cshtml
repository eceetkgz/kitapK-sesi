@model List<KitapKosesi.Models.Kitap>

@{
    ViewData["Title"] = "Kitaplar";
}

<style>
    .kitap-card .card {
        height: 100%;
        transition: transform 0.2s;
    }

    .kitap-card .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
    }

    .kitap-card .card-img-top {
        height: 250px; 
        object-fit: contain; 
        padding: 10px; 
        background-color: #fff; 
    }

    .kitap-card .card-body {
        padding: 1rem;
        display: flex;
        flex-direction: column;
    }

    .kitap-card .card-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.3rem;
        height: 2.4rem; 
        overflow: hidden;
    }

    .kitap-card .text-muted {
        font-size: 0.85rem;
    }

    .kitap-card .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .kitap-card .badge {
        font-size: 0.75rem;
    }

   
    .row {
        margin-right: -10px;
        margin-left: -10px;
    }

    .kitap-card {
        padding-right: 10px;
        padding-left: 10px;
        margin-bottom: 20px;
    }
</style>



