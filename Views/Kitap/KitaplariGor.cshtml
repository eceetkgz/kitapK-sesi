@model List<KitapKosesi.Models.Kitap>

@{
    ViewData["Title"] = "Kitaplar";
}

<div class="container mt-4">
    <h2>Kitaplar</h2>
    
    <div class="row">
        @foreach (var kitap in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(kitap.ResimUrl))
                    {
                        <img src="@kitap.ResimUrl" class="card-img-top" alt="@kitap.Ad" style="height: 300px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="/images/default-book.jpg" class="card-img-top" alt="Varsayılan kitap resmi" style="height: 300px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@kitap.Ad</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@kitap.Yazar</h6>
                        <p class="card-text">@(kitap.Aciklama?.Length > 100 ? kitap.Aciklama.Substring(0, 100) + "..." : kitap.Aciklama)</p>
                        <p class="card-text"><small class="text-muted">Kategori: @kitap.Kategori</small></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0">@kitap.Fiyat.ToString("C")</span>
                            <div>
                                @if (kitap.StokMiktari > 0)
                                {
                                    <button class="btn btn-primary btn-sm" onclick="sepeteEkle('@kitap.Id')">Sepete Ekle</button>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" onclick="stokBildirimEkle('@kitap.Id')">Stok Bildirimi</button>
                                }
                                <button class="btn btn-outline-danger btn-sm" onclick="favoriyeEkle('@kitap.Id')">
                                    <i class="bi bi-heart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

