@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>@ViewData["Title"]</h2>
        
        @if (!string.IsNullOrEmpty(ViewBag.Hata))
        {
            <div class="alert alert-danger">@ViewBag.Hata</div>
        }

        <form method="post" action="/Kullanici/KayitOl">
            <div class="form-group">
                <label for="ad">Ad</label>
                <input type="text" class="form-control" id="ad" name="ad" required>
            </div>
            
            <div class="form-group">
                <label for="soyad">Soyad</label>
                <input type="text" class="form-control" id="soyad" name="soyad" required>
            </div>

            <div class="form-group">
                <label for="email">E-posta</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="sifre">Şifre</label>
                <input type="password" class="form-control" id="sifre" name="sifre" required>
            </div>

            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>
</div>

<!-- Butonlar için mevcut kod -->
<button id="favoriEkle" class="btn btn-primary" style="display:none;" onclick="favoriEkle(kitapId)">Favorilere Ekle</button>
<button id="sepetEkle" class="btn btn-success" style="display:none;" onclick="sepetEkle(kitapId)">Sepete Ekle</button>

<script>
    // Kullanıcı giriş yaptıysa butonları göster
    if (userIsLoggedIn) {
        document.getElementById("favoriEkle").style.display = "block";
        document.getElementById("sepetEkle").style.display = "block";
    }
</script> 