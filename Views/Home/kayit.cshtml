@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Kayıt Ol</h3>

                    @if (TempData["HATA"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["HATA"]
                        </div>
                    }

                    @if (TempData["BASARILI"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["BASARILI"]
                        </div>
                    }

                    <form method="post" asp-controller="Kayit" asp-action="KayitOl">
                        <div class="form-group mb-3">
                            <label for="ad">Ad</label>
                            <input type="text" class="form-control" id="ad" name="ad" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="soyad">Soyad</label>
                            <input type="text" class="form-control" id="soyad" name="soyad" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email">E-posta Adresi</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="sifre">Şifre</label>
                            <input type="password" class="form-control" id="sifre" name="sifre" required 
                                   minlength="6" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" 
                                   title="En az 6 karakter, 1 büyük harf, 1 küçük harf ve 1 rakam içermelidir">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>