@{
    ViewData["Title"] = "İletişim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-4" style="color: var(--primary-color)">İletişim</h2>

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="mb-3" style="color: var(--primary-color)">İletişim Bilgileri</h5>
                            <p><i class="bi bi-geo-alt-fill me-2"></i>Adres:</p>
                            <p class="ms-4">Nilüfer, Bursa</p>
                            
                            <p><i class="bi bi-telephone-fill me-2"></i>Telefon:</p>
                            <p class="ms-4">+90 (224) XXX XX XX</p>
                            
                            <p><i class="bi bi-envelope-fill me-2"></i>E-posta:</p>
                            <p class="ms-4">info@kitapkosesi.com</p>
                        </div>
                        
                        
                    </div>

                    <hr class="my-4">

                    <h5 class="mb-3" style="color: var(--primary-color)">Bize Ulaşın</h5>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Adınız Soyadınız</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta Adresiniz</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Mesajınız</label>
                            <textarea class="form-control" id="message" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Mesaj Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 